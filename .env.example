# TeaTeach Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=your_secure_database_password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_256_bits
JWT_EXPIRATION=86400000

# Email Configuration
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_app_password

# Ollama Configuration (if using external Ollama service)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b

# Application Configuration
APP_BASE_URL=http://localhost:12345
FILE_UPLOAD_DIR=uploads/submissions

# Production Database (for production deployment)
PROD_DB_HOST=localhost
PROD_DB_PORT=3306
PROD_DB_NAME=teateach